<Window
    x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApplication3" 
     xmlns:fw="clr-namespace:Waveface.ClientFramework;assembly=Waveface.ClientFramework"
       xmlns:wvmodel="clr-namespace:Waveface.Model;assembly=Waveface.Model"
        Title="MainWindow" Height="498.5" Width="807" Loaded="Window_Loaded">

    <Window.Resources>
        <DataTemplate DataType="{x:Type wvmodel:Service}">
            <Label Content="{Binding Name}" Foreground="White"/>
        </DataTemplate>

        <!-- Photo Template -->
        <DataTemplate DataType="{x:Type wvmodel:ContentGroup}">
            <local:GroupContentItem/>
        </DataTemplate>

        <!-- Photo Template -->
        <DataTemplate DataType="{x:Type wvmodel:Content}">
            <local:ContentItem x:Name="content" RenderTransformOrigin="0.5,0.5" Padding="10">
                <local:ContentItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </local:ContentItem.RenderTransform>
            </local:ContentItem>
        </DataTemplate>
        
        

        <!-- Main photo catalog view -->
        <Style TargetType="{x:Type ListBox}" x:Key="PhotoListBoxStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}" >
                        <WrapPanel Margin="5" IsItemsHost="True" Orientation="Horizontal" 
                        ItemHeight="240" 
                       ItemWidth="240"
                       VerticalAlignment="Top" HorizontalAlignment="Stretch" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Labeled photo catalog view -->
        <Style TargetType="{x:Type ListBox}" x:Key="LabledPhotoListBoxStyle">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}" >
                        <WrapPanel Margin="5" IsItemsHost="True" Orientation="Horizontal" 
                        ItemHeight="120" 
                       ItemWidth="120"
                       VerticalAlignment="Top" HorizontalAlignment="Stretch" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for an individual generic item -->
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}" >
                        <Border SnapsToDevicePixels="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#445B6249"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="#FF222222">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="302*"/>
            <!--<RowDefinition Height="25"/>-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#FF5D5D5D" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Margin="0,0,0,1">
            <Grid.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="1" Direction="270"/>
            </Grid.Effect>
            <Label Content="Waveface" Foreground="#FFE0E0E0" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="0" FontSize="22" FontWeight="Bold" FontFamily="Aharoni">
                <Label.Effect>
                    <DropShadowEffect/>
                </Label.Effect>
            </Label>
            <Grid Background="#FF5D5D5D" Grid.Row="0" Margin="150,0,0,0">
                <WrapPanel VerticalAlignment="Center">
                    <local:BackButton Content="BackButton" Height="20"   VerticalAlignment="Center" Width="20" Click="BackButton_Click" Margin="2"/>
                    <Label x:Name="lblContentLocation" Content="{Binding SelectedItem.Parent.ContentPath , ElementName=lbxContentContainer}" Foreground="White"/>
                </WrapPanel>
            </Grid>
        </Grid>
        <ListBox x:Name="lbxDeviceContainer" Grid.Column="0" Grid.Row="1" Background="#FF2E2E2E" BorderBrush="{x:Null}"
                  ItemsSource="{Binding IsAsync=True}"
                 SelectedIndex="0"
                 VirtualizingStackPanel.IsVirtualizing="True" 
                 VirtualizingStackPanel.VirtualizationMode="Recycling" SelectionChanged="lbxDeviceContainer_SelectionChanged" PreviewMouseLeftButtonDown="lbxDeviceContainer_PreviewMouseLeftButtonDown">
            <ListBox.Effect>
                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Direction="0"/>
            </ListBox.Effect>
        </ListBox>
        <!--<DockPanel Background="#FF252424" Grid.Row="2" Grid.ColumnSpan="2">
            <Slider Name="ZoomSlider" 
		  DockPanel.Dock="Right"
          Margin="0,0,0,0" 
          Orientation="Horizontal" 
          Minimum="80" 
          Maximum="320" 
          Value="160" 
          TickFrequency="80"
          TickPlacement="BottomRight" 
          SmallChange="5"
          LargeChange="20" />
        </DockPanel>-->

        <Grid Grid.Column="2" Grid.Row="1" Background="#FF2E2E2E">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="1" ShadowDepth="1" Direction="180"/>
            </Grid.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">

                <ListBox x:Name="lbxLabeledContentContainer"
        		Style="{StaticResource LabledPhotoListBoxStyle}" 
        		IsSynchronizedWithCurrentItem="True"
        		ItemsSource="{Binding IsAsync=True}"
				Margin="5" 
        		SelectionMode="Extended"
        		VirtualizingStackPanel.IsVirtualizing="True" 
				VirtualizingStackPanel.VirtualizationMode="Recycling"/>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <local:PhotoViewerControl x:Name="pvcViewer" Visibility="Collapsed"/>

            <ScrollViewer x:Name="svContentContainer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ListBox x:Name="lbxContentContainer"
		Style="{StaticResource PhotoListBoxStyle}" 
          IsSynchronizedWithCurrentItem="True"
          ItemsSource="{Binding IsAsync=True}"
          Margin="5"
          SelectedIndex="0"
		  MouseDoubleClick="OnPhotoClick"
                          MouseRightButtonUp="onMouseRightButtonDown"
             VirtualizingStackPanel.IsVirtualizing="True" 
                         VirtualizingStackPanel.VirtualizationMode="Recycling"/>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>
