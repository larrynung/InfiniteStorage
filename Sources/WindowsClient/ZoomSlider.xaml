                                        Value="{StaticResource HorizontalSliderThumbPressedBackground}" />
                                <Setter Property="Stroke"
                                        TargetName="OuterBorder"
                                        Value="{StaticResource HorizontalSliderThumbPressedBorder}" />
                            </Trigger>
                            <Trigger Property="IsEnabled"
