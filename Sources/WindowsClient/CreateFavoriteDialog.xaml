<Window x:Class="Waveface.Client.CreateFavoriteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="Window"
        Title="Create Favorite"
        Width="415"
        Height="183"
        Background="#FF595959"
        WindowStyle="ToolWindow">

    <Grid x:Name="LayoutRoot">
        <Label Width="387"
               Height="25"
               Margin="10,16,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Please give this new Favorite a name"
               Foreground="White" />
        <TextBox x:Name="tbxFavoriteName"
                 Width="387"
                 Height="22"
                 Margin="10,53,10,0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 Padding="5,0,0,0"
                 Text="Untitled Favorite"
                 TextWrapping="Wrap" />
        <Button Width="82"
                Margin="0,0,99,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="Button_Click_1"
                Content="OK" />
        <Button Width="82"
                Margin="0,0,10,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="Button_Click"
                Content="Cancel" />
    </Grid>
</Window>