<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Waveface.Client.CreateFavoriteDialog"
	x:Name="Window"
	Title="Create Favorite"
	Width="415" Height="183" Background="#FF595959" WindowStyle="ToolWindow">

	<Grid x:Name="LayoutRoot">
		<Label Content="Favorite Title:" HorizontalAlignment="Left" Height="25" Margin="10,16,0,0" VerticalAlignment="Top" Width="135" Foreground="White"/>
		<TextBox x:Name="tbxFavoriteName" HorizontalAlignment="Left" Height="22" Margin="10,53,0,0" TextWrapping="Wrap" Text="Untitled Favorite" VerticalAlignment="Top" Width="387"/>
		<Button Content="OK" HorizontalAlignment="Right" Height="31" Margin="0,0,99,10" VerticalAlignment="Bottom" Width="82" Click="Button_Click_1"/>
		<Button Content="Cancel" HorizontalAlignment="Right" Height="31" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="82" Click="Button_Click"/>
	</Grid>
</Window>