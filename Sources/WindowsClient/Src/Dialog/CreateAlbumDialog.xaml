<Window x:Class="Waveface.Client.CreateAlbumDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="Window"
        Title="{DynamicResource CreateNewAlbumDialogTitle}"
        Width="415"
        Height="183"
        Background="#FF595959"
        IsTabStop="False"
        Loaded="Window_Loaded"
        
        
        SnapsToDevicePixels ="True"
        TextOptions.TextFormattingMode ="Ideal"
        TextOptions.TextRenderingMode="Auto"
        
        WindowStyle="ToolWindow">

    <Grid x:Name="LayoutRoot">
        <Label Width="387"
               Height="25"
               Margin="10,16,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="{DynamicResource CreateNewAlbumDialogDescription}"
               Foreground="White" />
        <TextBox x:Name="tbxAlbumName"
                 Width="387"
                 Height="22"
                 Margin="10,53,10,0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 KeyDown="tbxFavoriteName_KeyDown"
                 Padding="5,0,0,0"
                 TabIndex="0"
                 TextWrapping="Wrap" />
        <Button 
                Margin="0,0,105,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="Button_Click_1"
                Content="{DynamicResource OkButtonText}"
                TabIndex="1" />
        <Button 
                Margin="0,0,10,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="Button_Click"
                Content="{DynamicResource CancelButtonText}"
                TabIndex="2" />
    </Grid>
</Window>
