<UserControl x:Class="Waveface.Client.ContentStar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="UserControl"
             PreviewMouseLeftButtonDown="UserControl_PreviewMouseLeftButtonDown"
             mc:Ignorable="d">
    <UserControl.Resources>

        <Style x:Key="ContentStarImageStyle"
               TargetType="Image">
            <Setter Property="Source" Value="{StaticResource ContentStar_Normal}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Source" Value="{StaticResource ContentStar_Over}" />
                </Trigger>

                <DataTrigger Binding="{Binding Tagged,
                                               ElementName=UserControl,
                                               IsAsync=True}"
                             Value="True">
                    <Setter Property="Source" Value="{StaticResource ContentStar_Selected}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Image x:Name="image"
           Stretch="Fill"
           Style="{StaticResource ContentStarImageStyle}" />
</UserControl>