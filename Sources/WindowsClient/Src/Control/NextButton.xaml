<UserControl x:Class="Waveface.Client.NextButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="UserControl"
             mc:Ignorable="d">

    <UserControl.Resources>

        <Style x:Key="LBimgBtnStyle"
               TargetType="Image">
            <Setter Property="Source" Value="{StaticResource lb_right_img_normal}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Source" Value="{StaticResource lb_right_img_mouseover}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Image Style="{StaticResource LBimgBtnStyle}" Stretch="None" />
</UserControl>