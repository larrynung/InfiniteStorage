<UserControl x:Class="Waveface.Client.AddSourceTip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="UserControl"
             Width="1000"
             Height="500"
             UseLayoutRounding="True"
             d:DesignHeight="158"
             d:DesignWidth="204"
             mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">
        <Image Width="204"
               Height="158"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"
               Source="{StaticResource AddDeviceArrowIcon}"
               Stretch="None" />
        <StackPanel Margin="201,0,0,158"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Orientation="Vertical">
            <TextBlock Margin="0,0,-1,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="Segoe UI"
                       FontSize="48"
                       Foreground="#FFA8A8A8"
                       Text="{DynamicResource AddSourceTipTitle}"
                       TextWrapping="Wrap" />
            <TextBlock Width="367"
                       Height="56"
                       Margin="0,20,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="Segoe UI"
                       FontSize="21.333"
                       Foreground="#FFA8A8A8"
                       Text="{DynamicResource AddSourceTipText}"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>