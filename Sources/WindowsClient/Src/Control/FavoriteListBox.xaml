<ListBox x:Class="Waveface.Client.FavoriteListBox"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         x:Name="UserControl"
         Background="{x:Null}"
         BorderBrush="{x:Null}"
         DragOver="UserControl_DragOver"
         IsSynchronizedWithCurrentItem="False"
         ItemsSource="{Binding IsAsync=True}"
         MouseMove="UserControl_MouseMove"
         PreviewKeyDown="UserControl_PreviewKeyDown"
         PreviewMouseLeftButtonDown="UserControl_PreviewMouseLeftButtonDown"
         Style="{DynamicResource ListBoxStyle1}"
         VirtualizingStackPanel.IsVirtualizing="True"
         VirtualizingStackPanel.VirtualizationMode="Recycling"
         d:DesignHeight="109"
         d:DesignWidth="400"
         mc:Ignorable="d">

    <ListBox.Resources>
        <ContextMenu x:Key="FavoriteContextMenu">
            <MenuItem Click="DeleteMenuItem_Click"
                      Header="Delete" />
        </ContextMenu>
        <SolidColorBrush x:Key="ListBorder"
                         Color="#828790" />
        <Style x:Key="ListBoxStyle1"
               TargetType="{x:Type ListBox}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
            <Setter Property="BorderBrush" Value="{StaticResource ListBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="1"
                                SnapsToDevicePixels="true">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ListBox.Resources>

    <ListBox.ItemTemplate>
        <DataTemplate>
            <Grid x:Name="item"
                  Height="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0"
                            Grid.Column="0"
                            Orientation="Horizontal">
                    <Image x:Name="icon"
                           Margin="10, 2, 0, 0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Source="{StaticResource UnSelectedFav}"
                           Stretch="None" />
                    <Label x:Name="sourceName"
                           VerticalAlignment="Center"
                           VerticalContentAlignment="Center"
                           Content="{Binding Name}"
                           Foreground="#a8a8a8" />
                </StackPanel>
                <Label x:Name="sourceCount"
                       Grid.Row="0"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalContentAlignment="Center"
                       Content="{Binding ContentCount}"
                       Foreground="#a8a8a8" />
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem},
                                               Path=IsSelected}"
                             Value="True">
                    <Setter TargetName="icon" Property="Source" Value="{StaticResource SelectedFav}" />
                    <Setter TargetName="item" Property="Background" Value="#d5d5d5" />
                    <Setter TargetName="sourceName" Property="Foreground" Value="Black" />
                    <Setter TargetName="sourceCount" Property="Foreground" Value="Black" />
                    <Setter TargetName="item" Property="ContextMenu" Value="{StaticResource FavoriteContextMenu}" />
                </DataTrigger>

                <DataTrigger Binding="{Binding ShareEnabled}"
                             Value="true">
                    <Setter TargetName="icon" Property="Source" Value="{StaticResource UnSelectedCloudFav}" />
                </DataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding ShareEnabled}" Value="true" />
                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="icon" Property="Source" Value="{StaticResource SelectedCloudFav}" />
                </MultiDataTrigger>

                <DataTrigger Binding="{Binding ID}"
                             Value="00000000-0000-0000-0000-000000000000">
                    <Setter TargetName="item" Property="ContextMenu" Value="{x:Null}" />
                </DataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding ID}" Value="00000000-0000-0000-0000-000000000000" />
                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="icon" Property="Source" Value="{StaticResource SelectedFavStar}" />
                </MultiDataTrigger>

                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding ID}" Value="00000000-0000-0000-0000-000000000000" />
                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="False" />
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="icon" Property="Source" Value="{StaticResource UnSelectedFavStar}" />
                </MultiDataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>