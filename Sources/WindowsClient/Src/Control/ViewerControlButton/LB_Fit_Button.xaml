<UserControl x:Class="Waveface.Client.LB_Fit_Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="UserControl">

    <UserControl.Resources>
        <Style x:Key="LBimgBtnStyle" TargetType="Image">
            <Setter Property="Source" Value="{StaticResource lb_fit_img_normal}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Source" Value="{StaticResource lb_fit_img_mouseover}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Image Stretch="None" Style="{StaticResource LBimgBtnStyle}" />
</UserControl>