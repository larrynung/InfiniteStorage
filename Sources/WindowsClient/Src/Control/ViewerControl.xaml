<UserControl x:Class="Waveface.Client.ViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Waveface.Client"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="UserControl"
             Width="300"
             Height="40"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="LBDeleteImageStyle" TargetType="Image">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Source" Value="{StaticResource LB_delete_0}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Source" Value="{StaticResource LB_delete_1}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot"
          Width="300"
          Height="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="70" />
        </Grid.ColumnDefinitions>

        <Rectangle Grid.ColumnSpan="2" Opacity="0.87">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FF403E3E" />
                    <GradientStop Offset="1" Color="#FF191818" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <StackPanel Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <local:PreviousButton Width="21.289"
                                      Height="26.42"
                                      Margin="0, 0, 8, 0"
                                      Background="Transparent"
                                      MouseDown="PreviousButton_MouseDown" />

                <Label x:Name="lblPageNo"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Content="0"
                       FontFamily="Segoe UI"
                       FontSize="14.667"
                       Foreground="White" />

                <Label Height="26.419"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Content="/"
                       FontFamily="Segoe UI"
                       Foreground="White" />

                <Label x:Name="lblPageCount"
                       Width="31.567"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Content="0"
                       FontFamily="Segoe UI"
                       FontSize="14.667"
                       Foreground="White" />

                <local:NextButton Width="21.289"
                                  Height="26.42"
                                  Margin="8, 0, 0, 0"
                                  Background="Transparent"
                                  MouseDown="NextButton_MouseDown" />
            </StackPanel>


            <local:LabelTag x:Name="staredControl"
                            Width="21"
                            Height="21"
                            Margin="8, 0, 0, 0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Cursor="Hand"
                            Tagged="{Binding Liked,
                                             IsAsync=True,
                                             Mode=TwoWay}" />

            <Border x:Name="pvDelete"
                    Width="18"
                    Height="18"
                    Margin="8, 0, 0, 0"
                    MouseDown="pvDelete_MouseDown">
                <Image x:Name="image"
                       Cursor="Hand"
                       Style="{StaticResource LBDeleteImageStyle}" />
            </Border>

        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Horizontal">
            <Rectangle Width="0.872"
                       Height="40"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Stretch="Fill"
                       Stroke="#FF646262"
                       StrokeThickness="0.5" />

            <Label Margin="15,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Background="Transparent"
                   Content="{DynamicResource ExitButtonText}"
                   Cursor="Hand"
                   Foreground="#FFF3F3F7"
                   MouseDown="CloseButton_MouseDown" />
        </StackPanel>

    </Grid>
</UserControl>