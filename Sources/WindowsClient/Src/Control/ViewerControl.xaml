<UserControl x:Class="Waveface.Client.ViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Waveface.Client"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="UserControl"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ExitButtonStyle"
               TargetType="Label">
            <Setter Property="Foreground" Value="#FFB4B4B4" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LBDeleteImageStyle"
               TargetType="Image">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Source" Value="{StaticResource LB_delete_0}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Source" Value="{StaticResource LB_delete_1}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot"  
          Height="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Rectangle Opacity="0.87" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FF403E3E" />
                    <GradientStop Offset="1" Color="#FF191818" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <StackPanel
                    Orientation="Horizontal" >
            <local:PreviousButton
        		Background="Transparent"
        		Cursor="Hand"
        		MouseDown="PreviousButton_MouseDown" Margin="15,0,8,0" />

        	<Label x:Name="lblPageNo"
        		HorizontalContentAlignment="Center"
        		VerticalContentAlignment="Center"
        		Content="0"
        		FontSize="14.667"
        		Foreground="#FFB4B4B4" />

        	<Label Height="26.42"
        		HorizontalContentAlignment="Center"
        		VerticalContentAlignment="Center"
        		Content="/"
        		Foreground="#FFB4B4B4" />

        	<Label x:Name="lblPageCount"
        		HorizontalContentAlignment="Center"
        		VerticalContentAlignment="Center"
        		Content="0"
        		FontSize="14.667"
        		Foreground="#FFB4B4B4" />

        	<local:NextButton
        		Margin="8, 0, 0, 0"
        		Background="Transparent"
        		Cursor="Hand"
        		MouseDown="NextButton_MouseDown" />
        	<local:LightBoxStar x:Name="staredControl"
        		Margin="10,0,0,0"
        		HorizontalAlignment="Center"
        		VerticalAlignment="Center"
        		Background="Transparent"
        		Cursor="Hand"
        		Tagged="{Binding Liked, IsAsync=True, Mode=TwoWay}" />
        		<Image x:Name="image"
        			Cursor="Hand" MouseDown="pvDelete_MouseDown"
        			Style="{StaticResource LBDeleteImageStyle}" Stretch="None" Margin="8,0,10,0" />

        </StackPanel>
        <Rectangle Width="0.872"
        	Height="40"
        	HorizontalAlignment="Left"
        	VerticalAlignment="Center"
        	Stretch="Fill"
        	Stroke="#FF646262"
        	StrokeThickness="0.5" Grid.Column="1" Margin="1.003,0,0,0" />
        <Label
        	HorizontalAlignment="Center"
        	VerticalAlignment="Center"
        	Background="Transparent"
        	Content="{DynamicResource ExitButtonText}"
        	Cursor="Hand"
        	MouseDown="CloseButton_MouseDown"
        	Style="{StaticResource ExitButtonStyle}" Grid.Column="1" Margin="10,0" />

    </Grid>
</UserControl>