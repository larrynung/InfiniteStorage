<UserControl x:Class="Waveface.Client.ViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             xmlns:local="clr-namespace:Waveface.Client"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="UserControl"
             Width="300"
             d:DesignHeight="74.5"
             d:DesignWidth="280"
             mc:Ignorable="d">

    <Grid x:Name="LayoutRoot" Width="300">
        <Rectangle Width="300"
                   Height="60"
                   Opacity="0.87">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0" Color="#FF403E3E" />
                    <GradientStop Offset="1" Color="#FF191818" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <local:LabelTag x:Name="staredControl"
                        Width="21"
                        Height="21"
                        Margin="190,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Cursor="Hand"
                        Tagged="{Binding Liked,
                                         IsAsync=True,
                                         Mode=TwoWay}" />
        <Path Width="0.872"
              Height="46"
              Margin="0,0,64,0"
              HorizontalAlignment="Right"
              VerticalAlignment="Center"
              Data="M310.499,473 L310.499,494.0238"
              Stretch="Fill"
              Stroke="#FF646262"
              StrokeThickness="0.5" />
        <Label Margin="193.811,0,15,0"
               HorizontalAlignment="Right"
               VerticalAlignment="Center"
               Background="Transparent"
               Content="{DynamicResource ExitButtonText}"
               Cursor="Hand"
               Foreground="#FFF3F3F7"
               MouseDown="CloseButton_MouseDown" />
        <Label Width="70.234"
               Height="26.419"
               Margin="70,0,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="/"
               FontFamily="Segoe UI"
               Foreground="White"
               Padding="0" />
        <Label x:Name="lblPageNo"
               Width="31.734"
               Height="26.419"
               Margin="67,0,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="0"
               FontFamily="Segoe UI"
               FontSize="14.667"
               Foreground="White"
               Padding="0" />
        <Label x:Name="lblPageCount"
               Width="31.567"
               Height="26.419"
               Margin="110,0,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="0"
               FontFamily="Segoe UI"
               FontSize="14.667"
               Foreground="White"
               Padding="0" />
        <local:NextButton Width="21.289"
                          Height="26.42"
                          Margin="150,0,0,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          Background="Transparent"
                          MouseDown="NextButton_MouseDown" />
        <local:PreviousButton Width="21.289"
                              Height="26.42"
                              Margin="40,0,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              Background="Transparent"
                              MouseDown="PreviousButton_MouseDown" />
    </Grid>
</UserControl>