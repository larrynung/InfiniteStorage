<UserControl x:Class="Waveface.Client.RightSidePanel2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="UserControl"
             UseLayoutRounding="True"
             d:DesignWidth="170"
             mc:Ignorable="d" Height="157.25">

    <Grid x:Name="LayoutRoot">
        <TextBox x:Name="tbxName"
                 Height="28"
                 Margin="10,0"
                 VerticalAlignment="Top"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 Background="#FF3B3B3B"
                 BorderBrush="Black"
                 BorderThickness="1"
                 FontFamily="Segoe UI Light"
                 Foreground="White"
                 Text="[Favorite Name]"
                 TextChanged="tbxName_TextChanged" />
        <Label Width="72"
               Height="21"
               Margin="10,65,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"
               Content="Home Sharing"
               FontFamily="Segoe UI Light"
               Foreground="White" Padding="0" />
        <ToggleButton x:Name="btnAction"
                      Width="70"
                      Height="21"
                      Margin="90,65,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Checked="btnAction_Checked"
                      Click="ToggleButton_Click"
                      Content="On Air"
                      IsChecked="True"
                      IsEnabledChanged="btnAction_IsEnabledChanged"
                      Unchecked="btnAction_Unchecked" />
        <Label Width="72"
        	Height="21"
        	Margin="10,93,0,0"
        	HorizontalAlignment="Left"
        	VerticalAlignment="Top"
        	HorizontalContentAlignment="Center"
        	VerticalContentAlignment="Center"
        	Content="Cloud Sharing"
        	FontFamily="Segoe UI Light"
        	Foreground="White" Padding="0" />
        <Button x:Name="btnAction_Copy"
        	Width="70"
        	Height="21"
        	Margin="90,93,0,0"
        	HorizontalAlignment="Left"
        	VerticalAlignment="Top"
        	Content="Share" Click="btnAction_Copy_Click"/>
    </Grid>
</UserControl>