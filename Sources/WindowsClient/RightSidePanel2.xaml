<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Waveface.Client.RightSidePanel2"
	x:Name="UserControl"
	d:DesignWidth="170" d:DesignHeight="86" UseLayoutRounding="True">

	<Grid x:Name="LayoutRoot">
		<Label x:Name="lblName"
               Content="[Favorite Name]" Margin="10,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" Background="#FF3B3B3B" BorderBrush="Black" BorderThickness="1" FontFamily="Segoe UI Light" Height="28"/>
		<Label Content="Available on TV" Margin="10,65,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Foreground="White" FontFamily="Segoe UI Light" FontSize="8" HorizontalAlignment="Left" Height="21" Width="62"/>
		<ToggleButton Content="On" HorizontalAlignment="Left" Height="21" Margin="78,65,0,0" VerticalAlignment="Top" Width="82" Click="ToggleButton_Click"/>
	</Grid>
</UserControl>