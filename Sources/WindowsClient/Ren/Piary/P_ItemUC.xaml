<UserControl x:Class="Waveface.Client.P_ItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:PendingUI="clr-namespace:Waveface.Client"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">
    <Grid x:Name="gridMain" Background ="White" Width="{Binding MyWidth}" Height="{Binding MyHeight}" Margin="16">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="2.71828"/>
        </Grid.Effect>

        <i:Interaction.Behaviors>
            <PendingUI:IgnoreMouseWheelBehavior />
        </i:Interaction.Behaviors>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="0, 8, 0, 0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="{Binding MySquare}" Height="{Binding MySquare}" BorderBrush="#80000000"  BorderThickness="2" RenderTransformOrigin="0.5,0.5">
            <Grid Background="Black" MouseMove="image_MouseMove" MouseEnter="image_MouseEnter" MouseLeave="image_MouseLeave">
                <Image x:Name="image" Stretch="UniformToFill"/>

                <Rectangle x:Name="rectMask" Fill="#d0000000"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <TextBlock x:Name="tbTitle" HorizontalAlignment="Center"  VerticalAlignment ="Center"  Margin="12, 0" FontFamily="Comic Sans MS" FontSize="16" FontStyle="Italic" FontWeight="Bold"/>
            <TextBlock x:Name="tbCount" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Margin="2" FontSize="8"/>
        </Grid>

    </Grid>
</UserControl>
