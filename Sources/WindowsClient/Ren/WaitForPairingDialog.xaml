<Window x:Class="Waveface.Client.WaitForPairingDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:gif="clr-namespace:WpfAnimatedGif"
        mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600" Height="300" Width="600"
	  Title="Wait For Pairing" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True"
      Closing="Window_Closing" Loaded="Window_Loaded"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Width="137.6" Height="48" Margin="16,0,0,0" HorizontalAlignment="Right" Source="/Waveface.Client;component/Resource/en_generic_rgb_wo_60.png" />

            <Grid Grid.Column="1" Margin="16" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Grid.Column="0" Fill="Black" Width="6" Height="6" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Download and run Favorite Uploader on your Android device." TextWrapping="Wrap"  VerticalAlignment="Center" FontSize="13"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Grid.Column="0" Fill="Black" Width="6" Height="6" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Make sure your WiFi is on." TextWrapping="Wrap"  VerticalAlignment="Center" FontSize="13"/>
                </Grid>

                <Grid Grid.Row="2" Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Grid.Column="0" Fill="Black" Width="6" Height="6" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="Click 'Yes' when your device is connected" TextWrapping="Wrap"  VerticalAlignment="Center" FontSize="13"/>
                </Grid>

                <Grid Grid.Row="3" Margin="0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Ellipse Grid.Column="0" Fill="Black" Width="6" Height="6" VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"  TextWrapping="Wrap"  VerticalAlignment="Center" FontSize="13">
                      <Run Text="Need Help? Vist our"/>
                      <Hyperlink Click="Hyperlink_Click">  
                        <Run Text="FAQ zone"/>
                      </Hyperlink>
                    </TextBlock>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Margin="16, 8, 16, 16">
            <Border Background ="#eeeeee" BorderBrush="#aaaaaa" BorderThickness="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Width="66" Height="50" Margin="16, 0" gif:ImageBehavior.AnimatedSource="/Waveface.Client;component/Resource/380.gif" />
                    <TextBlock Text="Searching for mobile devices..." VerticalAlignment="Center" FontSize="16"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
