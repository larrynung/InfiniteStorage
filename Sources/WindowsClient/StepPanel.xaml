<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Waveface.Client.StepPanel"
	x:Name="UserControl"
	d:DesignWidth="240" d:DesignHeight="400">

    <UserControl.Template>
        <ControlTemplate>
            <Grid>
                <Border x:Name="border" Grid.Column="0" Margin="0" Height="Auto" Width="Auto" Background="#f2f2f2" BorderThickness="2" BorderBrush="#FFBFBFBF">
                    <Path Data="M0,0 L57.87,0 0,97 z" Fill="#FFBFBFBF" HorizontalAlignment="Left" Height="80" Stretch="Fill" VerticalAlignment="Top" Width="55"/>
                </Border>
                <TextBlock Grid.Row="0" Text="{Binding StepNo, ElementName=UserControl}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="{Binding Background, ElementName=border}" FontSize="40" Padding="5,0,0,0" LineHeight="44" LineStackingStrategy="BlockLineHeight"/>
                <ContentPresenter Content="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}" />
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>